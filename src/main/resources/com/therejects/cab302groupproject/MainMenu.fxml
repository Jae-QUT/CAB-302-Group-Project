<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.therejects.cab302groupproject.controller.MainMenuController"
           fx:id="root"
           styleClass="main-menu-root"
           stylesheets="@../../../ui/mainmenu.css">

    <!-- Background fence (fills the scene) -->
    <ImageView fx:id="bgImage" preserveRatio="false" fitWidth="1280" fitHeight="800"
               StackPane.alignment="CENTER"/>

    <!-- Sprite layer: monsters roam here -->
    <Pane fx:id="monsterLayer" pickOnBounds="false" StackPane.alignment="CENTER"/>

    <!-- Foreground layout: left-aligned menu -->
    <HBox spacing="24" alignment="CENTER_LEFT" StackPane.alignment="CENTER_LEFT">
        <Region HBox.hgrow="ALWAYS" prefWidth="48"/> <!-- left gutter -->

        <VBox spacing="18" alignment="CENTER_LEFT" maxWidth="360" styleClass="menu-box">
            <Label text="Math Battle Monsters" styleClass="title"/>

            <VBox spacing="12" alignment="CENTER_LEFT" maxWidth="320">
                <Button fx:id="btnPlay"         text="_Play"            onAction="#onPlay"/>
                <Button fx:id="btnLeaderboard"  text="_Leaderboard"     onAction="#onLeaderboard"/>
                <Button fx:id="btnChangeTeam"   text="_Player Profile"  onAction="#onPlayerProfile"/>
                <Button fx:id="btnLogout"       text="_Logout"          onAction="#onLogout"/>
            </VBox>

            <Label text="v0.1.0" styleClass="version"/>
        </VBox>

        <Region HBox.hgrow="ALWAYS"/> <!-- pushes menu left but keeps center vertical alignment -->
    </HBox>
</StackPane>
