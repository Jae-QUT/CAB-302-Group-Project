<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox alignment="CENTER" spacing="12" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.therejects.cab302groupproject.controller.ProfileController"  fx:id="profileCtrl">

   <Label text="Profile" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

   <TextField fx:id="usernameField" promptText="Username" editable="false"/>
   <TextField fx:id="emailField" promptText="Email"/>
   <TextField fx:id="yearLevelField" promptText="Year Level"/>

   <Button text="Save Changes" onAction="#handleSave"
   />
   <Button text="Back" onAction="#stepBack"
   />
   <Separator/>

   <Label text="Stats" style="-fx-font-weight: bold;"/>
   <Label fx:id="statsLabel" text="Games: 0 | Won: 0 | Lost: 0"/>

   <Label text="Badges" style="-fx-font-weight: bold;"/>
   <ListView fx:id="badgesList" prefHeight="80"/>

   <Label text="Friends" style="-fx-font-weight: bold;"/>
   <ListView fx:id="friendsList" prefHeight="80"/>
</VBox>
