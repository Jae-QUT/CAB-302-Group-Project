<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.therejects.cab302groupproject.controller.QuestionGenController"
           prefWidth="600" prefHeight="200"
           style="-fx-padding:24; -fx-background-color: transparent;">
    <VBox spacing="12" maxWidth="520"
          style="-fx-padding:16; -fx-background-color: rgba(0,0,0,0.12); -fx-background-radius:12;">
        <Label text="Question Generator" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
        <Label fx:id="promptLabel" text="-" style="-fx-font-size:32px;"/>
        <HBox spacing="8">
            <TextField fx:id="answerField" promptText="Enter answer"/>
            <Button fx:id="submitButton" text="Submit" onAction="#onSubmitClick"/>
<!--            <Button fx:id="nextButton" text="New Question" onAction="#onGenerateClick"/>-->
        </HBox>
        <Label fx:id="feedbackLabel" textFill="gray"/>
    </VBox>
</VBox>